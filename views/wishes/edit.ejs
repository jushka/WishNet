<% include ../partials/top %>

<h1>Edit your Wish</h1>

<form action="/<%= wish.owner.username %>/wishes/<%= wish._id %>/?_method=PUT" method="POST">
  <input type="text" name="wish[name]" value="<%= wish.name %>" placeholder="What do you wish?">
  <input type="number" name="wish[price]" value="<%= wish.price %>" placeholder="Enter price" min="0.01" step="0.01">
  <input type="text" name="wish[image]" value="<%= wish.image %>" placeholder="Enter image URL">
  <input type="text" name="wish[link]" value="<%= wish.link %>" placeholder="Enter link to wish">
  <input type="text" name="wish[description]" value="<%= wish.description %>" placeholder="Enter description">
  <button>Edit wish!</button>
</form>

<% include ../partials/bottom %>